---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
---

<BaseLayout 
  title="Page Not Found" 
  description="The page you're looking for doesn't exist. Explore our curated collection of discoveries instead."
>
  <div class="container">
    <Header />
    
    <main>
      <div class="error-content">
        <div class="error-illustration">
          <div class="rabbit-hole">
            <div class="hole"></div>
            <div class="rabbit">üê∞</div>
          </div>
        </div>
        
        <h1 class="error-title">Down the wrong rabbit hole?</h1>
        <p class="error-message">
          The page you're looking for seems to have disappeared into the void. 
          But don't worry‚Äîthere are plenty of other fascinating discoveries waiting for you.
        </p>
        
        <div class="error-actions">
          <a href="/" class="primary-button">Explore All Posts</a>
          <a href="/search" class="secondary-button">Search Content</a>
        </div>
        
        <div class="suggestions">
          <h2>You might be interested in:</h2>
          <ul class="suggestion-list">
            <li><a href="/">Latest discoveries</a></li>
            <li><a href="/about">About Rabbit Holes</a></li>
            <li><a href="/rss.xml">RSS Feed</a></li>
          </ul>
        </div>
      </div>
    </main>

    <Footer />
  </div>
</BaseLayout>

<style>
  .error-content {
    max-width: 600px;
    margin: 0 auto;
    text-align: center;
    padding: 60px 0;
  }

  .error-illustration {
    margin-bottom: 40px;
  }

  .rabbit-hole {
    position: relative;
    display: inline-block;
    margin: 20px;
  }

  .hole {
    width: 120px;
    height: 120px;
    background: radial-gradient(circle, #000000 30%, #333333 70%, #666666 100%);
    border-radius: 50%;
    position: relative;
    box-shadow: inset 0 0 30px rgba(0, 0, 0, 0.8);
  }

  body.dark .hole {
    background: radial-gradient(circle, #ffffff 30%, #cccccc 70%, #999999 100%);
    box-shadow: inset 0 0 30px rgba(255, 255, 255, 0.3);
  }

  .rabbit {
    position: absolute;
    top: -10px;
    right: -20px;
    font-size: 48px;
    transform: rotate(-15deg);
    animation: bounce 2s infinite ease-in-out;
  }

  @keyframes bounce {
    0%, 20%, 50%, 80%, 100% {
      transform: translateY(0) rotate(-15deg);
    }
    40% {
      transform: translateY(-10px) rotate(-15deg);
    }
    60% {
      transform: translateY(-5px) rotate(-15deg);
    }
  }

  .error-title {
    font-size: 36px;
    font-weight: 700;
    margin-bottom: 20px;
    color: var(--text-primary-light);
    letter-spacing: -0.02em;
  }

  body.dark .error-title {
    color: var(--text-primary-dark);
  }

  .error-message {
    font-size: 18px;
    line-height: 1.6;
    color: var(--text-secondary-light);
    margin-bottom: 40px;
    font-family: 'Source Serif 4', Georgia, serif;
  }

  body.dark .error-message {
    color: var(--text-secondary-dark);
  }

  .error-actions {
    display: flex;
    gap: 16px;
    justify-content: center;
    margin-bottom: 60px;
    flex-wrap: wrap;
  }

  .primary-button,
  .secondary-button {
    display: inline-block;
    padding: 12px 24px;
    border-radius: 8px;
    text-decoration: none;
    font-weight: 500;
    font-size: 16px;
    transition: all 0.2s ease;
  }

  .primary-button {
    background: var(--link-light);
    color: white;
    border: none;
  }

  .primary-button:hover {
    background: #0052a3;
    transform: translateY(-1px);
  }

  .secondary-button {
    background: transparent;
    color: var(--text-secondary-light);
    border: 1px solid var(--border-light);
  }

  .secondary-button:hover {
    color: var(--text-primary-light);
    border-color: var(--text-primary-light);
    background: var(--accent-light);
  }

  body.dark .primary-button {
    background: var(--link-dark);
    color: var(--bg-dark);
  }

  body.dark .secondary-button {
    color: var(--text-secondary-dark);
    border-color: var(--border-dark);
  }

  body.dark .secondary-button:hover {
    color: var(--text-primary-dark);
    border-color: var(--text-primary-dark);
    background: var(--accent-dark);
  }

  .suggestions {
    text-align: left;
    max-width: 400px;
    margin: 0 auto;
  }

  .suggestions h2 {
    font-size: 20px;
    font-weight: 600;
    margin-bottom: 20px;
    color: var(--text-primary-light);
    text-align: center;
  }

  body.dark .suggestions h2 {
    color: var(--text-primary-dark);
  }

  .suggestion-list {
    list-style: none;
    padding: 0;
  }

  .suggestion-list li {
    margin-bottom: 12px;
    padding-left: 20px;
    position: relative;
    text-align: center;
  }

  .suggestion-list li::before {
    content: '‚Üí';
    position: absolute;
    left: 0;
    color: var(--link-light);
    font-weight: 600;
  }

  body.dark .suggestion-list li::before {
    color: var(--link-dark);
  }

  .suggestion-list a {
    color: var(--text-secondary-light);
    text-decoration: none;
    transition: color 0.2s ease;
  }

  .suggestion-list a:hover {
    color: var(--link-light);
  }

  body.dark .suggestion-list a {
    color: var(--text-secondary-dark);
  }

  body.dark .suggestion-list a:hover {
    color: var(--link-dark);
  }

  @media (max-width: 768px) {
    .error-content {
      padding: 40px 0;
    }

    .error-title {
      font-size: 28px;
    }

    .error-message {
      font-size: 16px;
    }

    .error-actions {
      flex-direction: column;
      align-items: center;
    }

    .primary-button,
    .secondary-button {
      width: 200px;
      text-align: center;
    }

    .hole {
      width: 80px;
      height: 80px;
    }

    .rabbit {
      font-size: 32px;
      top: -5px;
      right: -15px;
    }
  }
</style>