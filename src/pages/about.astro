        </div>
      </article>
    </main>
    
    <Footer />
  </div>
</Layout>

<style>
  .single-post {
    max-width: 680px;
    margin: 0 auto;
    padding: 0 0 80px 0;
  }
  
  .post-header {
    margin-bottom: 48px;
    text-align: center;
  }
  
  .post-title {
    font-size: 36px;
    font-weight: 600;
    line-height: 1.2;
    margin-bottom: 16px;
    letter-spacing: -0.02em;
    color: var(--text-primary-light);
    font-family: 'Work Sans', sans-serif;
  }
  
  body.dark .post-title {
    color: var(--text-primary-dark);
  }
  
  .post-content {
    font-size: 19px;
    line-height: 1.8;
  }
  
  @media (max-width: 768px) {
    .post-title {
      font-size: 28px;
    }
    
    .post-content {
      font-size: 17px;
    }
  }
</style>